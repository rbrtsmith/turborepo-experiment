{
  "name": "nextjs-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/config/*",
    "packages/shared/*"
  ],
  "devDependencies": {
    "prettier": "^2.8.3",
    "turbo": "^1.7.0"
